<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.drools.maven.test</groupId>
    <artifactId>test-pom</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>test-pom-for-maven-mojo</name>
    <description>test pom for mojo testing</description>
    <dependencies>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>multi-game-common</artifactId>
            <version>1.1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.drools.maven</groupId>
                <artifactId>drools-guvnor-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <guvnorURL>http://localhost:8080/drools-5.1.0-guvnor/org.drools.guvnor.Guvnor/webdav/packages</guvnorURL>
                    <packageName>mx.ecosur.multigame.test</packageName>
                    <username>MultiGame</username>
                    <password>test</password>
                    <resources>
                        <param>src/test/resources/testPom.xml</param>
                    </resources>
                    <models>
                        <POJODataModel>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>multi-game-common</artifactId>
                        </POJODataModel>
                    </models>
                </configuration>
            </plugin>            
        </plugins>
    </build>
</project>
